<% include ../partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header">New Comment to <%= blog.title %></div>
  <form class="ui form" action="/blogs/<%= blog._id %>/comments" method="post">
    <div class="field">
      <label for="author">Author</label>
      <input type="text" name="comment[author]" placeholder="Author" id="author">
    </div>
    <div class="field">
      <label for="text">Comment</label>
      <input type="text" name="comment[text]" placeholder="Commment" id="text">
    </div>
    <input type="submit" class="ui violet big basic button">
  </form>
</div>

<% include ../partials/footer %>
